datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Bio {
  id        Int     @default(autoincrement()) @id
  name      String
  tagline   String
  email     String
  objective String
  github    String
  website   String?
  jobs      Job[]
}

model User {
  id       Int     @default(autoincrement()) @id
  name     String?
  email    String  @unique
  password String
}

model Job {
  id              Int       @default(autoincrement()) @id
  role            String?
  roleDescription String?
  startDate       DateTime?
  endDate         DateTime?
  profile         Bio       @relation(fields: [profileId], references: [id])
  profileId       Int
  company         Company?  @relation(fields: [companyId], references: [id])
  companyId       Int?
}

model Company {
  id          Int     @default(autoincrement()) @id
  name        String
  description String?
  logo        String?
  website     String?
  jobs        Job[]
}
